<p>Hello, <%=admin_user.email %></p>

<div class="addBook">
	<button class="button button-block round" /><%= link_to "Add!", admin_add_book_path %></button>
</div>	


<% @books.each do |book| %>
    <div class="pricing-table" ></div>
    <ul class="pricing-table">
      <li class="title"> <%=book.title %>    </li>
      <li class="price"> <%=book.author %>   </li>
      <li class="description"> <%=book.genre %>  </li>
      <li class="bullet-item"> <%=book.checked_out? %>    </li>
      <li class="cta-button"><a class="button" <%= link_to 'Book Details', admin_book_view_path(book) %> </a></li>
    </ul>
<% end %>