<div class = "sign-in">

  <div class="small-3 columns">

    <%= form_for(:admin, :url => {:controller => 'dashboard', :action => 'admin_login'}) do |f|%>
        <%= f.email_field :email, :size => 70, placeholder: 'Email' %>
        <%= f.password_field :password, :size => 70, placeholder: 'Password' %>
        <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, class: name %>
        <% end %>
        <button class="button">Log in</button>
    <% end %>
  </div>
</div>


