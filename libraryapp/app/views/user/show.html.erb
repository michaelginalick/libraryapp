<p>Hello, <%=current_user.username%></p>



<% @books.each do |book| %>
<ul class="pricing-table">
  <li class="title"> <%=book.title %>    </li>
  <li class="price"> <%=book.author %>   </li>
  <li class="description"> <%=book.genre %>  </li>
  <li class="bullet-item"> <p>Checkout status:</p> <%= book.checked_out? %>    </li>
  <li class="cta-button"><a class="button" <%= link_to 'Book Details', book_path(book) %> </a></li>
</ul>
<% end %>

<div class="dropdown">
  <a data-dropdown="drop1" class="button success" aria-controls="drop1" aria-expanded="false">Your Books</a>
  <ul id="drop1" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
     <% @user_checkouts.each do |checkout| %>
            <li><%= link_to '', book_path(checkout.book) %><strong><%= checkout.book.title %></strong>--Details</li>
         <%end%>
  </ul>
</div>